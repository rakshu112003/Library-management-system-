LibraryManagementSystem.java

import java.io.*;
import java.util.*;

class Book {
    String title;
    String author;

    Book(String title, String author) {
        this.title = title;
        this.author = author;
    }
}

public class LibraryManagementSystem {
    static final String FILE_NAME = "books.txt";

    public static void main(String[] args) throws IOException {
        Scanner sc = new Scanner(System.in);
        while (true) {
            System.out.println("\n--- Library Management System ---");
            System.out.println("1. Add Book");
            System.out.println("2. View Books");
            System.out.println("3. Search Book");
            System.out.println("4. Exit");
            System.out.print("Enter choice: ");
            int choice = sc.nextInt();
            sc.nextLine(); // consume newline

            switch (choice) {
                case 1:
                    System.out.print("Enter book title: ");
                    String title = sc.nextLine();
                    System.out.print("Enter author name: ");
                    String author = sc.nextLine();
                    addBook(new Book(title, author));
                    break;
                case 2:
                    viewBooks();
                    break;
                case 3:
                    System.out.print("Enter book title to search: ");
                    String searchTitle = sc.nextLine();
                    searchBook(searchTitle);
                    break;
                case 4:
                    System.out.println("Exiting...");
                    sc.close();
                    return;
                default:
                    System.out.println("Invalid choice!");
            }
        }
    }

    static void addBook(Book book) throws IOException {
        FileWriter fw = new FileWriter(FILE_NAME, true);
        fw.write(book.title + "," + book.author + "\n");
        fw.close();
        System.out.println("Book added successfully!");
    }

    static void viewBooks() throws IOException {
        File file = new File(FILE_NAME);
        if (!file.exists()) {
            System.out.println("No books found.");
            return;
        }
        BufferedReader br = new BufferedReader(new FileReader(file));
        String line;
        System.out.println("\n--- Book List ---");
        while ((line = br.readLine()) != null) {
            String[] data = line.split(",");
            System.out.println("Title: " + data[0] + " | Author: " + data[1]);
        }
        br.close();
    }

    static void searchBook(String title) throws IOException {
        File file = new File(FILE_NAME);
        if (!file.exists()) {
            System.out.println("No books found.");
            return;
        }
        BufferedReader br = new BufferedReader(new FileReader(file));
        String line;
        boolean found = false;
        while ((line = br.readLine()) != null) {
            String[] data = line.split(",");
            if (data[0].equalsIgnoreCase(title)) {
                System.out.println("Book Found - Title: " + data[0] + ", Author: " + data[1]);
                found = true;
                break;
            }
        }
        if (!found) {
            System.out.println("Book not found.");
        }
        br.close();
    }
}
